<!--pages/film-review-detail/detail.wxml-->
<view>
  <image class='movie-image' src='{{ review.image }}'></image>
  <view class='movie-wrapper'>
    <view class='movie-title'>{{ review.title }}</view>
    <view class='movie-rec'>
      <image src='{{ review.avatar }}' class='rec-avator'></image>
      <view class='rec-text'>{{ review.username }}</view>
    </view>
    <view class='review-content'>{{ review.content }}</view>
    <view class='button-wrapper-three' wx:if='{{showCollect}}'>
      <view class='button'>
        <view class='button-text' bindtap='collectReview'>
          收藏影评
        </view>
      </view>
    </view>
    <view class='button-wrapper-two' wx:elif='{{!onlyShow}}'>
      <view class='button'>
        <view class='button-text' bindtap='collectReview'>
          收藏影评
        </view>
      </view>
      <view class='button'>
        <view class='button-text' bindtap='editReview'>
          写影评
        </view>
      </view>
    </view>
  </view>
</view>