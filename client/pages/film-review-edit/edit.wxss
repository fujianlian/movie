/* pages/film-review/edit.wxss */

.movie-image {
  position: absolute;
  width: 204rpx;
  height: 300rpx;
  top: 30rpx;
  left: 273rpx;
  z-index: 99;
}

.movie-wrapper {
  position: fixed;
  top: 60rpx;
  left: 50rpx;
  right: 50rpx;
  bottom: 140rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  background: white;
  border: solid 1rpx #eaeef1;
  border-radius: 10rpx;
}

.movie-title {
  padding-top: 295rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #333;
  font-weight: 70;
}

.edit-ipt {
  width: 100%;
  height: 250rpx;
  padding: 0 46rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 44rpx;
  margin-top: 50rpx;
  text-align: center;
}

.edit-placeholder {
  color: rgba(29, 29, 38, 0.4);
}

.bottom {
  height: 100rpx;
  position: fixed;
  right: 0;
  left: 0;
  bottom: 0rpx;
  text-align: center;
  font-size: 40rpx;
  line-height: 100rpx;
  border-radius: 0rpx;
}
