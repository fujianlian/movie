/* pages/home/home.wxss */

.hot-wrapper {
  display: flex;
  flex-flow: column;
  margin-top: 60rpx;
  align-items: center;
}

.hot-image {
  width: 500rpx;
  height: 740rpx;
}

.hot-title {
  margin-top: 40rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #333;
  font-weight: 600
}

.hot-rec {
  display: flex;
  margin-top: 20rpx;
  align-items: center
}

.bottom-text {
  flex: 1;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
  color: #acbcca
}

.login-text {
  font-size: 30rpx;
  line-height: 100rpx;
  color: #acbcca;
  background-color: transparent
}

.login-text::after {
  border: none
}